.modal
  -if current_page?(flyers_path) || current_page?(root_path) || current_page?(emails_path)
    %input.modal-state{id: "modal-#{flyer.id}", type: "checkbox"}/
    .modal-fade-screen
      .modal-inner
        .modal-close{for: "modal-#{flyer.id}"} 
        .image-wrapper
          = image_tag flyer.document.url(:large)
        = link_to('Download', flyer.document.url(:original, false), :class => "download-btn-lrg", :target => "_blank")
  -elsif current_page?(logos_path)  
    %input.modal-state{id: "modal-#{logo.id}", type: "checkbox"}/
    .modal-fade-screen
      .modal-inner
        .modal-close{for: "modal-#{logo.id}"} 
        .image-wrapper
          = image_tag logo.document.url(:large)
        = link_to('Download', logo.document.url(:original, false), :class => "download-btn-lrg", :target => "_blank")